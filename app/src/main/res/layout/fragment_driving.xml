<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <View
            android:id="@+id/driving_view"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:background="#f0f0f0"
            android:onClick="onClick_nodrive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/driving_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:onClick="onClick_drive"
            android:text="@string/driving_safe"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#81A560"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/driving_view"
            app:layout_constraintEnd_toEndOf="@+id/driving_view"
            app:layout_constraintStart_toStartOf="@+id/driving_view"
            app:layout_constraintTop_toTopOf="@+id/driving_view"
            app:layout_constraintVertical_bias="0.405"
            tools:text="@string/driving_safe" />

</androidx.constraintlayout.widget.ConstraintLayout>
